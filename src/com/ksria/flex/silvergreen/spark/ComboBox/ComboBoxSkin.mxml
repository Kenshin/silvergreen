<s:SparkSkin 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	alpha.disabled=".5"
> 
    
    <!-- host component -->
    <fx:Metadata>
        <![CDATA[ 

			/** 
			* @copy spark.skins.spark.ApplicationSkin#hostComponent
			*/
			[HostComponent("spark.components.ComboBox")]
			
        ]]>
    </fx:Metadata> 
    
    <s:states>
        <s:State name="normal" />
        <s:State name="open" />
        <s:State name="disabled" />
    </s:states>

    <!-- Transition -->
    <s:transitions>

    	<s:Transition fromState="*" toState="open" >
			<s:Sequence>
				<s:Fade  target="{ dropDown }" duration="400" alphaFrom="0" alphaTo="1" />
			</s:Sequence>
    	</s:Transition> 

    	<s:Transition fromState="*" toState="normal" >
			<s:Sequence>
				<s:Fade  target="{ dropDown }" duration="400" alphaFrom="1" alphaTo="0" />
			</s:Sequence>
    	</s:Transition> 

    </s:transitions>
    
    <!-- PopUpAnchor -->
    <s:PopUpAnchor id="popup"  
    	displayPopUp.normal="false" displayPopUp.open="true" 
    	includeIn="open"
    	left="0" right="0" top="0" bottom="0" 
    	itemDestructionPolicy="auto"
    	popUpPosition="below" 
		popUpWidthMatchesAnchorWidth="true">
    	
		<!--- 
		      The drop down area of the skin. This includes borders, background colors, scrollers, and filters. 
		      To create a custom drop down, edit this skin and create a custom skin class. 
		-->
    	<s:Group id="dropDown">

			<!-- layer 1 board -->
			<s:Rect left="0" right="0" top="0" bottom="0">
				
				<s:fill>
					<s:SolidColor color="0xe1e1e1"/>
				</s:fill>
				
				<s:filters>
					<s:DropShadowFilter id="dsfBg" alpha="0.5" blurX="0" blurY="0" distance="1" strength="1" />
				</s:filters>
				
			</s:Rect>
			
			<!-- layer 2 board -->
			<s:Rect left="1" right="1" top="1" bottom="1">
				
				<s:fill>
					<s:SolidColor color="0xffffff"/>
				</s:fill>

		    </s:Rect>
		    
		    <s:Scroller 
				left="2" top="2" right="2" bottom="2" 
		    	focusEnabled="false" 
				minViewportInset="1"
			>
				
			    <s:DataGroup id="dataGroup" 
			    	itemRenderer="com.ksria.flex.silvergreen.spark.ItemRender.ItemRenderSkin">
					
			    	<s:layout>
			    	    <s:VerticalLayout gap="0" horizontalAlign="contentJustify"/>
			    	</s:layout>
					
			    </s:DataGroup>
				
		    </s:Scroller>
			
 	    </s:Group>
		
	</s:PopUpAnchor>
		
    <!--- @copy spark.components.ComboBox#textInput -->
    <s:TextInput 
		id="textInput" 
		enabled.disabled="false"
		left="0" right="18" top="0" bottom="0" 
		skinClass="com.ksria.flex.silvergreen.spark.ComboBox.ComboBoxTextInputSkin"
	/>
    
    <!---  The default skin is ComboBoxButtonSkin. 
            @copy spark.components.supportClasses.DropDownListBase#openButton
            @see spark.skins.spark.ComboBoxButtonSkin -->
	<s:Button 
		id="openButton" 
		right="0" top="0" bottom="0" 
		width="19"
		focusEnabled="false" tabEnabled="false"
		skinClass="com.ksria.flex.silvergreen.spark.ComboBox.ComboBoxButtonSkin"
	/>
    
</s:SparkSkin>

